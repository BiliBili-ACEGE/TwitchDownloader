{
  "name": "twitch-downloader",
  "version": "0.9.0",
  "description": "Free tool to download Twitch content with GUI",
  "author": "Sergio Almela",
  "private": true,
  "license": "SEE LICENSE IN LICENSE",
  "main": "dist/src/renderer/index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist/ && rimraf out/",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix",
    "rimraf": "./node_modules/rimraf/bin.js",
    "start": "npm run build && electron-forge start",
    "start:terminal": "npm run build && node dist/src/terminal/main.js",
    "test": "npm run build && vitest",
    "coverage": "npm run build && vitest run --coverage",
    "watch": "tsc -w",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.3",
    "@electron-forge/maker-deb": "^6.0.3",
    "@electron-forge/maker-rpm": "^6.0.3",
    "@electron-forge/maker-squirrel": "^6.0.3",
    "@electron-forge/maker-zip": "^6.0.3",
    "@types/cli-progress": "^3.11.0",
    "@types/mkdirp": "^1.0.2",
    "electron": "^21.3.0",
    "ts-standard": "^12.0.1",
    "typescript": "^4.9.3",
    "vitest": "^0.25.2"
  },
  "dependencies": {
    "axios": "^1.1.3",
    "bootstrap": "^5.2.3",
    "cli-progress": "^3.11.2",
    "electron-squirrel-startup": "^1.0.0",
    "i18n": "^0.15.1",
    "inversify": "^6.0.1",
    "m3u8-parser": "^6.0.0",
    "m3u8stream": "^0.8.6",
    "mkdirp": "^1.0.4",
    "prompts": "^2.4.2",
    "reflect-metadata": "^0.1.13",
    "toastify-js": "^1.12.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sergioalmela/TwitchDownloader"
  }
}