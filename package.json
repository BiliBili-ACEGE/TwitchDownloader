{
  "name": "twitch-downloader",
  "version": "0.1",
  "description": "Free tool to download Twitch content with GUI",
  "author": "Sergio Almela and Santi Mansilla",
  "private": true,
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist/",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix",
    "rimraf": "./node_modules/rimraf/bin.js",
    "start": "npm run build && electron  --no-sandbox .",
    "start:terminal": "npm run build && node dist/terminal/main.js",
    "watch": "tsc -w"
  },
  "devDependencies": {
    "electron": "^20.1.3",
    "ts-standard": "^11.0.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "i18n": "^0.15.0",
    "prompt-sync": "^4.2.0"
  }
}
